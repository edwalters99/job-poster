<h1>Change your password <%= @user.first_name %>:</h1>

<!-- Renders validation error messages  -->
<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li class="error"> <%= msg %></li>
        <% end  %>
    </ul>
<% end  %>

<%= form_for(@user, html: { multipart: true, :onsubmit => "validate()" }) do |f| %>

    <%= f.label :password , "New Password" %>
    <%= f.password_field :password, :required => true %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
 
    <%= f.submit "Change Password" %>

<% end %>


 <script type="text/javascript">
        function validate()
        {
            if ( document.getElementById("user_password").value != document.getElementById("user_password_confirmation").value )
            {
                alert( "Password's must match!" );
                window.location.reload();
                return false;
            }   
            return true;
        }
</script>






