<h1><%= @current_user.first_name %>'s Jobs</h1>

<% if @jobs.length == 0 %>
 You don't have any jobs yet! Why not
<%= link_to "Post A New Job", new_job_path  %>
<% end  %>
<% @jobs.each do |job| %>
    <%= link_to job_path(job) do %>
        <div class="box"><%= job.title  %></div>

        <% if job.assigned_to.nil? %>
            <%= link_to "Edit", edit_job_path(job) %>
        <% end %>
        
        <%= link_to "Delete", job_path(job), :method => 'delete', :data => { :confirm => 'Are you sure?'} %>
    <% end%>
<% end%>


