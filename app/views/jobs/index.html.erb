<h1>All Jobs</h1>

<li><%= link_to "Sort by Newest to Oldest", :sort => "created_at" %>
<li><%= link_to "Sort by Oldest to Newest", :sort => "created_at_reverse" %>

<li><%= link_to "Sort by Price Low to High", :sort => "price" %>
<li><%= link_to "Sort by Price High to Low", :sort => "price_reverse" %>


<% @jobs.each do |job| %>
    <% if job.assigned_to == nil  %>
        <%= link_to job_path(job) do %>
            <div class="box"><%= job.title  %></div>
        <% end %>
    <% end %>
<% end%>


