      
    <h1>All Jobs</h1>
    <div class="buttons">
      <%= link_to "Sort by Newest to Oldest", :sort => "created_at" %>
    <%= link_to "Sort by Oldest to Newest", :sort => "created_at_reverse" %>
    <%= link_to "Sort by Price Low to High", :sort => "price" %>
    <%= link_to "Sort by Price High to Low", :sort => "price_reverse" %>
    <%= link_to "Jobs near me",  :sort => "distance" %>
    
    </div>






<% @jobs.each do |job| %>
    <% if job.assigned_to == nil  %>
        <%= link_to job_path(job) do %>
            <div class="box">
                <%= job.title  %>
                <p><%= number_to_currency job.price, precision: 0 %></p>
                <% job.categories.each do |category| %>
                    <%= category.name %>
                <% end %>
              
                  <% if @current_user.distance_to(job.user) != nil &&@current_user.distance_to(job.user) > 0 %>
                    <p><%= number_to_human(@current_user.distance_to(job.user), :precision => 2) %> km away</p>
                <% end %>
                
                <p>Posted: <%= time_ago_in_words(job.created_at) %> ago</p>
            </div>
        <% end %>
    <% end %>
<% end%>


